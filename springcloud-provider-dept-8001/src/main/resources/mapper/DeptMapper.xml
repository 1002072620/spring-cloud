<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kuang.springcloud.dao.DeptDao">
    <insert id="addDept" parameterType="com.kuang.springcloud.pojo.Dept">
        insert into db01.dept(dname, db_source) VALUES (#{dname},DATABASE())
    </insert>

    <select id="queryById" resultType="com.kuang.springcloud.pojo.Dept" parameterType="Long">
        select *from db01.dept where deptno = #{deptno};
    </select>

    <select id="querAll"  resultType="com.kuang.springcloud.pojo.Dept">
        select *from db01.dept
    </select>


</mapper>